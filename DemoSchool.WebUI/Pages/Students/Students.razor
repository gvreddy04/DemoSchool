@page "/students"

@using BlazorBootstrap

<PageTitle>Students | Learning Center</PageTitle>

<div class="mb-4">
    <div class="d-flex flex-wrap flex-sm-nowrap justify-content-between align-items-center">
        <!--begin::Info-->
        <div class="d-flex flex-column align-items-start justify-content-center flex-wrap me-2">
            <!--begin::Title-->
            <h1 class="text-dark fw-bolder my-1 fs-2">Students</h1>
            <!--end::Title-->
        </div>
        <!--end::Info-->
        <!--begin::Actions-->
        <div class="d-flex align-items-center flex-nowrap text-nowrap py-1">
            <a href="/students/create" class="btn btn-sm btn-primary"><i class="bi bi-plus"></i> Create student</a>
        </div>
        <!--end::Actions-->
    </div>
</div>

<Grid TItem="Student"
      Class="table table-hover table-bordered table-striped"
      DataProvider="StudentsDataProvider"
      AllowPaging="true"
      PaginationAlignment="Alignment.End"
      PageSize="15">

    <GridColumn TItem="Student" Context="student" HeaderText="Student">
        <a href="/students/@student.StudentId">@student.StudentName</a>
    </GridColumn>
    <GridColumn TItem="Student" Context="student" HeaderText="Parent / Gaurdian">
        @student.GaurdianName
    </GridColumn>
    <GridColumn TItem="Student" Context="student" HeaderText="DOB">
        @student.DOB.ToString("dd/MMM/yyyy")
    </GridColumn>
    <GridColumn TItem="Student" Context="student" HeaderText="Email">
        @(student.Email ?? "-")
    </GridColumn>
    <GridColumn TItem="Student" Context="student" HeaderText="Phone Number">
        +@student.CountryCode @student.PhoneNumber
    </GridColumn>

</Grid>